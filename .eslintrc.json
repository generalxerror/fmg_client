{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "plugins": [
    "tailwindcss"
  ],
  "extends": [
    "@nuxtjs/eslint-config-typescript",
    "plugin:nuxt/recommended",
    "plugin:tailwindcss/recommended"
  ],
  "rules": {
    "vue/multi-word-component-names": "off",
    "vue/no-v-for-template-key": "off",
    "tailwindcss/no-custom-classname": "off"
  }
}
